package unidade2;

import java.util.Locale;

import javax.swing.JOptionPane;

public class AppFaturamentoVendas {
	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		
		int vendasJaneiro = 15000;
		int vendasFevereiro = 23000;
		int vendasMarco = 17000;
		
		int faturamentoTrimestral = vendasJaneiro + vendasFevereiro + vendasMarco;
		
		JOptionPane.showMessageDialog(null, "Resultado faturamento trimestral= " + faturamentoTrimestral);
	}

}
